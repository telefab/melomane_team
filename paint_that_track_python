        os.system('mpg321 ~/Bureau/saxophone/1 seconde/saxophone_F4_1_forte_normal.mp3 &')
    elif(note=="g"):
        os.system('mpg321 ~/Bureau/saxophone/1 seconde/saxophone_Fs4_1_forte_normal.mp3 &')
    elif(note=="h"):
        os.system('mpg321 ~/Bureau/saxophone/1 seconde/saxophone_G4_1_forte_normal.mp3 &')
    elif(note=="i"):
        os.system('mpg321 ~/Bureau/saxophone/1 seconde/saxophone_Gs4_1_forte_normal.mp3 &')
    elif(note=="j"):
        os.system('mpg321 ~/Bureau/saxophone/1 seconde/saxophone_A4_1_forte_normal.mp3 &')
    elif(note=="k"):
        os.system('mpg321 ~/Bureau/saxophone/1 seconde/saxophone_As4_1_forte_normal.mp3 &')
    elif(note=="l"):
        os.system('mpg321 ~/Bureau/saxophone/1 seconde/saxophone_B4_1_forte_normal.mp3 &')
    elif(note=="m"):
        os.system('mpg321 ~/Bureau/saxophone/1 seconde/saxophone_C5_1_forte_normal.mp3 &')
    elif(note=="n"):
