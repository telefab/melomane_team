import os
from time import sleep
import serial
ser = serial.Serial('/dev/ttyACM0', 9600)


while (1):
    note = ser.readline(1)
    if(note =="a"):
        os.system('mpg321 ~/Bureau/saxophone/1 seconde/saxophone_C4_1_forte_normal.mp3 &')
    elif(note=="b"):
        os.system('mpg321 ~/Bureau/saxophone/1 seconde/saxophone_Cs4_1_forte_normal.mp3 &')
